<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center">

    <FrameLayout
        android:id="@+id/Maratończyk"
        android:layout_width="312dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:layout_weight="30"
        android:alpha=".1"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/biegacz">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="52dp"
            android:text="Biegaj 150minut w diagu dnia"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:fontFamily="sans-serif-black"
            android:text="MARATOŃCZYK"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/nolife"
        android:layout_width="312dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:layout_weight="30"
        android:alpha=".1"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Maratończyk">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:layout_marginTop="52dp"
            android:text="Siedź 12 godzin"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:fontFamily="sans-serif-black"
            android:text="NO-LIFE"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/pierwszeKroki"
        android:layout_width="312dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="524dp"
        android:layout_weight="30"
        android:alpha=".1"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:fontFamily="sans-serif-black"
            android:text="PIERWSZE KROKI"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="230dp"
            android:layout_height="49dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="Wykonaj 10minut jakąkolwiek aktywność"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/biegacz"
        android:layout_width="312dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:layout_weight="30"
        android:alpha=".1"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/piwniczak">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="52dp"
            android:text="Biegaj 30minut w ciągu dnia"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:fontFamily="sans-serif-black"
            android:text="BIEGACZ"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/piwniczak"
        android:layout_width="312dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:layout_weight="30"
        android:alpha=".1"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pierwszeKroki">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="52dp"
            android:text="24h bez aktywności"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:fontFamily="sans-serif-black"
            android:text="PIWNICZAK"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </FrameLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="415dp"
        android:layout_height="64dp"
        android:layout_marginBottom="4dp"
        android:text="Powrót"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>